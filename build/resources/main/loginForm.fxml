<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController">

    <children>
        <TextField fx:id="textFieldLogin" alignment="CENTER" prefHeight="3.0" prefWidth="600.0" promptText="name or login">
            <VBox.margin>
                <Insets bottom="10.0" left="30.0" right="30.0" />
            </VBox.margin>
        </TextField>

        <Button fx:id="connectButton" mnemonicParsing="false" onAction="#connectPress" text="connect">
            <VBox.margin>
                <Insets top="15.0" />
            </VBox.margin>
        </Button>
      <Button fx:id="closeButton" mnemonicParsing="false" text="exit" textAlignment="CENTER" textFill="#cf1b1b" />
    </children>
</VBox>
